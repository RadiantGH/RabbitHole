{
    "name": "Rabbit Hole",
    "version": "0.0.0",
    "description": "A game where you go down the Wikipedia Rabbit Hole!",
    "manifest_version": 2,

    "commands": {
        "nosearching": {
          "suggested_key": {
            "default": "Ctrl+F",
            "mac": "MacCtrl+F"
          },
          "description": "Prevent cheating"
        }
    },

    "background": {
        "persistent": false,
        "scripts": ["js/mainapp.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": ["history", "storage", "tabs", "webNavigation", "http://*/*", "https://*/*", "activeTab", "scripting"],

    "icons": {
        "48": "images/icon_48.png",
        "96": "images/icon_96.png"
    },
    "browser_action": {
        "default_icon": "images/icon_96.png"
    }
}
