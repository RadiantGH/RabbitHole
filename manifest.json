{
    "name": "Rabbit Hole",
    "version": "0.0.0",
    "description": "My extension doesn't do anything yet!",
    "manifest_version": 2,

    "background": {
        "persistent": false,
        "scripts": ["js/mainapp.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },

    "permissions": ["history", "storage", "tabs", "webNavigation", "http://*/*", "https://*/*"],

    "icons": {
        "48": "images/icon_48.png",
        "96": "images/icon_96.png"
    },
    "browser_action": {
        "default_icon": "images/icon_96.png"
    }
}
